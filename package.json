{
	"name": "generator-yeo",
	"version": "1.0.23",
	"description": "Static site generator based on Webpack!",
	"homepage": "https://github.com/slo-amiculum/generator-amiculum-yeo",
	"author": "Stephen Orioste <stephen.orioste@amiculum.biz>",
	"files": [
		"generators"
	],
	"main": "generators/index.js",
	"keywords": [
		"yeoman-generator",
		"yeo",
		"frontend",
		"html5",
		"pug",
		"static site",
		"static",
		"sass",
		"browsersync",
		"webpack",
		"amiculum-digital"
	],
	"devDependencies": {
		"eslint": "^4.19.1",
		"eslint-config-prettier": "^2.9.0",
		"eslint-config-xo": "^0.20.1",
		"eslint-plugin-prettier": "^2.6.0",
		"husky": "^0.14.3",
		"jest": "^22.0.6",
		"lint-staged": "^6.1.1",
		"lodash": "^4.17.10",
		"prettier": "^1.11.1",
		"yeoman-assert": "^3.1.0",
		"yeoman-test": "^1.7.0"
	},
	"engines": {
		"npm": ">= 4.0.0"
	},
	"dependencies": {
		"yeoman-generator": "^2.0.1",
		"chalk": "^2.1.0",
		"yosay": "^2.0.1"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"scripts": {
		"pretest": "eslint .",
		"precommit": "lint-staged",
		"test": "jest"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		],
		"*.json": [
			"prettier --write",
			"git add"
		]
	},
	"eslintConfig": {
		"extends": [
			"xo",
			"prettier"
		],
		"env": {
			"jest": true,
			"node": true
		},
		"rules": {
			"prettier/prettier": [
				"error",
				{
					"singleQuote": true,
					"printWidth": 90
				}
			]
		},
		"plugins": [
			"prettier"
		]
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/slo-amiculum/generator-amiculum-yeo.git"
	},
	"bugs": {
		"url": "https://github.com/slo-amiculum/generator-amiculum-yeo/issues"
	}
}
